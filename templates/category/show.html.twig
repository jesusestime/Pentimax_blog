        <div class="col">
            <h3 class="pb-4 mb-4 fst-italic border-bottom">{{ category.name }}</h3>
        </div>
        <div class="article-list">
           {% include('article/list.html.twig') with {article: category.articles,leftCol:4,rightCol:8} %}
        </div>
    </div>
</main>

{% endblock %}
