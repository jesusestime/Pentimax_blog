{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <div class="w-75">
                    <h2>Profil de {{ user.username|capitalize }}</h2>
                    <form>
                        <div>
                            <label for="username" class="form-label">Username</label>
                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">@</span>
                                    <input type="text" class="form-control" id="username" value="{{ user.username }}" readonly>
                                </div>
                                 <label for="username" class="form-label mt-3">Email</label>
                               <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">@</span>
                                    <input type="text" class="form-control" id="username" value="{{ user.email }}" readonly>
                                </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <p>Comment's number posted : {{ user.comments|length }}</p>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>

    </div>
{% endblock %}
